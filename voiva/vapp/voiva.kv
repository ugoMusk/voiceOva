<WindowManager>:
    Screen:
        name: 'home'
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Switch to Home"
                on_press: root.switch_to_home_screen()

            Button:
                text: "Switch to Create"
                on_press: root.switch_to_create_screen()

            Button:
                text: "Switch to Docs"
                on_press: root.switch_to_docs_screen()

            Label:
                text: "Home Window"

    Screen:
        name: 'create'
        BoxLayout:
            orientation: "vertical"
            
            Button:
                text: "Switch to Home"
                on_press: root.switch_to_home_screen()

            Button:
                text: "Switch to Create"
                on_press: root.switch_to_create_screen()

            Button:
                text: "Switch to Docs"
                on_press: root.switch_to_docs_screen()
            Label:
                text: "Create Window"

    Screen:
        name: 'docs'
        BoxLayout:
            orientation: "vertical"

            Button:
                text: "Switch to Home"
                on_press: root.switch_to_home_screen()

            Button:
                text: "Switch to Create"
                on_press: root.switch_to_create_screen()

            Button:
                text: "Switch to Docs"
                on_press: root.switch_to_docs_screen()

            Label:
                text: "Docs Window"